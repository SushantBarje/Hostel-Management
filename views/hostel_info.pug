extends layout

block content
  link(rel="stylesheet", href='/stylesheets/sidebar.css')
  link(rel="stylesheet", href="/stylesheets/rector/header.css")
  .header-block
    h1 HOSTEL MANAGEMENT
    a(href='/logout') Logout
  .w3-sidebar
      ul
        li
          a(href='/rectorhome') Home
        li
          a(href='/studentreg') Student Registration
        li
          a(href='/studentdetails') Student Details
        li
          a(href='/hosteldetails') Hostel Details
        li
          a(href='/complaint') Complaints
        li
          a(href='/attendance') Attendance
        li
          a(href='/leave') Night Out
        li
          a(href='/noticeupdate') Notice
  .container
    h2(class="header1" style="display:inline-block") #{data[[0]]}
    table.table
      each dat in data[0]
        tr
          th Hostel Name :
          td #{dat.hostel_no}
        tr
          th Category :
          td #{dat.category}
        tr
          th Allocated Rector :
          td #{dat.rector_name}
        tr
          th Total Rooms :
          td #{dat.total_room}
        tr
          th Occupied Rooms :
            each dat in data[3]
              td #{dat.occupied_room}
        tr
          th Available Rooms:
            each dat in data[2]
              td #{dat.available_room}
        tr
          th No. of Beds (Each Room) :
          td #{dat.total_bed}
    
    div(class="input-group mt-3 input-group-lg")
      div(class="input-group-prepend")
        span(class="input-group-text") Search
      input(type="text" id="myInput" class="form-control")

    div(class="container")
      div(class="row")
        each dat in data[1]
         div(class="col-md-1 m-2 clearfix")
          a(href="/room_details/"+`${dat.hostel_no}/`+dat.id class="btn btn-danger" ) #{dat.room_no}
                      
  script.
    $(document).ready(function(){
      $('#myInput').on("keyup",function(){
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function(){
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        })
      })
    });
  
